@model BugTracksV3.Models.Ticket

@{
    ViewData["Title"] = "Restore";
}

<h1>Restore</h1>

<h3>Are you sure you want to Restore this ticket?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateUpdated)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.DateUpdated != null)
            {
                @Html.DisplayFor(model => model.DateUpdated)
            }
            else
            {
                @Html.Raw("N/A")
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketType.Name) @*Id*@
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPriority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPriority.Name) @*Id*@
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketStatus.Name) @*Id*@
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerUser)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.OwnerUserId != null)
            {
                @Html.DisplayFor(model => model.OwnerUser.FullName) @*Id*@
            }
            else
            {
                @Html.Raw("N/A")
            }
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeveloperUser)

        </dt>
        <dd class = "col-sm-10">
            @if (Model.DeveloperUserId != null)
            {
                @Html.DisplayFor(model => model.DeveloperUser.FullName) @*Id*@
            }
            else
            {
                @Html.Raw("N/A")
            }
            
        </dd class>
    </dl>
    
    <form asp-action="Restore">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Restore" class="btn btn-success" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>