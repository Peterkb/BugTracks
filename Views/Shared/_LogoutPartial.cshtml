@using Microsoft.AspNetCore.Identity
@using BugTracksV3.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser btUser = await UserManager.GetUserAsync(User);
}


@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="dropdown-item">Logout</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Dashboard.", "Home", new { area = "" })">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Dashboard", "Home", new { area = "" })">Login</a>
        </li>
    </ul>
}