    <a asp-action="Dashboard" asp-controller="Home" class="btn sign-in-btn focus-reset">Dashboard</a>        
    
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="start-trail-btn btn focus-reset">Logout</button>
    </form>
}
else
{
    <a class="btn sign-in-btn focus-reset" id="register" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Dashboard.", "Home", new { area = "" })">
        Register
    </a>

    <a class="start-trail-btn btn focus-reset" id="login" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Dashboard", "Home", new { area = "" })">
