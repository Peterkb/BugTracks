<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BugTracks</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="~/css/splash.css" rel="stylesheet"/>
	@*Font - Poppins*@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;1,600&display=swap" rel="stylesheet">
	@*<link href="~/LandingPageFrontEnd/css/theme.css" rel="stylesheet" />*@

</head>
<body>
	<div class="row" id="top">
		<nav class="navbar navbar-expand-lg navbar-light sticky-top" data-navbar-on-scroll="data-navbar-on-scroll">
			<div class="container dev">
				<a class="navbar-brand" asp-action="Index" asp-controller="Home"><img src="~/LandingPageFrontEnd/img/logo.svg" height="50" alt="logo" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"> </span></button>
				<div class="collapse navbar-collapse mt-4 mt-lg-0" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto">
						<li class="nav-item"><a class="nav-link fw-bold text-light" aria-current="page" href="#features">Features</a></li>
						<li class="nav-item"><a class="nav-link fw-bold text-light" aria-current="page" href="#github">GitHub</a></li>
						<li class="nav-item"><a class="nav-link fw-bold text-light" aria-current="page" href="#portfolio">Portfolio</a></li>
						<li class="nav-item"><a class="nav-link fw-bold text-light" aria-current="page" href="#contact">Contact</a></li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>

		@*Hero Section*@
		<section class="dev">
			<div class="container dev align-self-center">
				<div class="row dev">
					<div class="col-md-6 text-md-start text-center py-6">
						<h1 class="mb-4 fs-9 text-light">Bug Tracks equips teams with the right tools.</h1>
						<p class="mb-6 lead text-light">An Issue tracking web application that allows you to record, manage and collaborate on projects from concept to completion using in the way that works best for you.</p>
						<div class="text-center text-md-start">
							<a class="btn btn-light me-3 btn-lg text-custom" role="button" id="register" asp-area="Identity" asp-page="/Account/Register">Get started</a>
							<a class="btn btn-link text-warning fw-medium" href="#!" role="button" data-bs-toggle="modal" data-bs-target="#popupVideo"><span class="fas fa-play me-2"></span>Watch the video </a>
						</div>
					</div>
					<div class="col-md-6 text-end"><img class="pt-7 pt-md-0 img-fluid" src="~/LandingPageFrontEnd/img/hero/hero-illustration.png" /></div>
				</div>
			</div>
		</section>
	</div>

	@RenderBody()

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - Bug Tracks - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	@*Modal*@
	<div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideo" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered modal-lg">
			<div class="modal-content">
				<iframe class="rounded" style="width:100%;height:500px;" src="https://www.youtube.com/embed/_lhdhL4UDIo" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script src="~/LandingPageFrontEnd/vendors/bootstrap/bootstrap.min.js"></script>
	<script src="~/LandingPageFrontEnd/vendors/is/is.min.js"></script>
	<script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
	<script src="~/LandingPageFrontEnd/vendors/fontawesome/all.min.js"></script>
	<script src="~/LandingPageFrontEnd/js/theme.js"></script>


	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&amp;family=Volkhov:wght@700&amp;display=swap" rel="stylesheet">
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
