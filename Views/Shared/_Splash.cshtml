<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Issue Tracking App</title>
	<!-- Favicon -->
	<link rel="icon" href="~/favicon.ico" />

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="~/css/splash-v001.css" rel="stylesheet" />
	@*Font - Poppins*@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;1,600&display=swap" rel="stylesheet">
</head>
<body>
	@*Navbar*@
	<div id="navbarNav"></div>
	<nav class="navbar fixed-top navbar-expand-lg navbar-dark p-md-3">
		<header class="container">
			<div class="collapse navbar-collapse">
				<a class="navbar-brand" asp-action="Index" asp-controller="Home">
					<img class="logoText" src="~/img/splash/SiteLogo.svg" height="50" alt="TicketFlux logo" />
					<img class="logoImg" src="~/img/splash/logoLight.svg" height="50" alt="TicketFlux Text logo" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="#navbarNav" aria-current="page">Home</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#features" id="featuresDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Features
							</a>
							<ul class="dropdown-menu dropdown-menu-light" aria-labelledby="features dropdown">
								<li><a class="dropdown-item" href="#feature1">Feature 1</a></li>
								<li><a class="dropdown-item" href="#feature2">Feature 2</a></li>
								<li><a class="dropdown-item" href="#feature3">Feature 3</a></li>
								<li><a class="dropdown-item" href="#feature4">Feature 4</a></li>
								<li><a class="dropdown-item" href="#feature5">Feature 5</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link" aria-current="page" href="https://github.com/Peterkb/BugTracks" target="_blank">GitHub</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" aria-current="page" href="#contact">Contact</a>
						</li>
					</ul>
					<div class="me-auto"></div>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</header>
	</nav>

	@*Banner/Hero Section*@
	<div id="top" class="row d-flex align-items-center">
		<div class="col container home-intro">
			<div class="row d-flex justify-content-center align-items-center">
				<div class="col text-md-start text-center">
					<h1 class="mb-4 text-light"><strong>TicketFlux:</strong> Accelerating Project Success, One Ticket at a Time.</h1>
					<p class="mb-6 lead text-light">An Issue tracking web application built with ASP.Net6 using the MVC design pattern which allows you to record, manage and collaborate on projects from concept to completion using in the way that works best for you.</p>
					<div class="text-center text-md-start">
						<a class="btn btn-light me-3 btn-lg text-custom" role="button" id="register" asp-area="Identity" asp-page="/Account/Register">Demo App</a>
					</div>
				</div>
				<div class="col">
					<img class="pt-7 pt-md-0 img-fluid" src="~/img/splash/hero-illustration.png" />
				</div>
			</div>

		</div>
	</div>

	@*Index*@

	<div class="container">
		@RenderBody()
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - Bug Tracks - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	@*Modal*@
	<div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideo" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered modal-lg">
			<div class="modal-content">
				<iframe class="rounded" style="width:100%;height:500px;" src="https://www.youtube.com/embed/_lhdhL4UDIo" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="~/js/splash.js" asp-append-version="true"></script>


	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
