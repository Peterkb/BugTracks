	ViewData["Title"] = "Landing Page";
	Layout = "~/Views/Shared/_Splash.cshtml";
}

<section class="pt-7 vh-100">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-6 text-md-start text-center py-6">
