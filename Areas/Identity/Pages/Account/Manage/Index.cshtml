@page
@model IndexModel

@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
	<div class="col-md-6">
		<form id="profile-form" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@*Profile Image*@
			<div class="form-floating">
				@if (Model.CurrentImage != null)
				{
					<img id="AvatarFormFile" class="img-fluid img-thumbnail rounded-circle" style="width:400px" src="@Model.CurrentImage" />
				}
				else
				{
					<img id="AvatarFormFile" class="img-fluid img-thumbnail rounded-circle" style="width:400px" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" />
				}
			</div>
			<div class="form-floating">
				<label asp-for="Input.Image" class="form-label">Profile Image</label>
				<input asp-for="Input.Image" type="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" onchange="document.getElementById('AvatarFormFile').src = window.URL.createObjectURL(this.files[0])" />
				<span asp-validation-for="Input.Image" class="text-danger"></span>
			</div>
			@*UserName*@
			<div class="form-floating">
				<input asp-for="Username" class="form-control" disabled />
				<label asp-for="Username" class="form-label"></label>
			</div>
			@*PhoneNumber*@
			<div class="form-floating">
				<input asp-for="Input.PhoneNumber" class="form-control" />
				<label asp-for="Input.PhoneNumber" class="form-label"></label>
				<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
			</div>
			<button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
		</form>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
